<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="@dimen/bdar_dialog_padding">

    <LinearLayout
            android:id="@+id/bdar_plugin_searchbox_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bdar_dialog_bg_white"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:minHeight="45dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/bdar_plugin_dialog_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dip"
                    android:visibility="gone"/>
            <!-- title -->
            <TextView
                    android:id="@+id/bdar_plugin_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:textSize="21dp"/>
        </LinearLayout>

        <!-- 内容区 -->
        <LinearLayout
                android:id="@+id/bdar_plugin_dialog_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:minHeight="65dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView
                    android:id="@+id/bdar_plugin_dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bdar_dialog_text_padding"
                    android:layout_marginRight="@dimen/bdar_dialog_text_padding"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6.67dp"
                    android:textColor="#999999"
                    android:textSize="14dp"/>
        </LinearLayout>

        <!-- 扩展内容在此添加 -->
        <FrameLayout
                android:id="@+id/bdar_plugin_dialog_customPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <FrameLayout
                    android:id="@+id/bdar_plugin_dialog_custom_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </FrameLayout>

        <View
                android:id="@+id/bdar_plugin_divider2"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="#e0e0e0"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/bdar_plugin_negative_button"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bdar_alertdialog_button_day_bg_left_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:visibility="gone"/>

            <View
                    android:id="@+id/bdar_plugin_divider3"
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#e0e0e0"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/bdar_plugin_neutral_button"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bdar_alertdialog_button_day_bg_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:visibility="gone"/>

            <View
                    android:id="@+id/bdar_plugin_divider4"
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#e0e0e0"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/bdar_plugin_positive_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bdar_alertdialog_button_day_bg_right_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
            android:id="@+id/bdar_plugin_dialog_night_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#80000000">
    </FrameLayout>

</FrameLayout>